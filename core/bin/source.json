{
  "metadata": {
    "name": "CORS Payloads",
    "version": "1.0.0",
    "description": "CORS testing payloads for REVUEX CORS Scanner GOLD",
    "author": "REVUEX Team"
  },
  "external_origins": {
    "description": "Basic external origin tests",
    "origins": [
      "https://evil.com",
      "https://attacker.example",
      "https://malicious.site",
      "http://evil.com",
      "https://hacker.net"
    ]
  },
  "null_origin": {
    "description": "Null origin for sandboxed iframe attacks",
    "origin": "null",
    "attack_vector": "Sandboxed iframe, data: URL, file:// URL"
  },
  "subdomain_bypasses": {
    "description": "Subdomain-based validation bypasses",
    "patterns": [
      "https://evil.{domain}",
      "https://{domain}.evil.com",
      "https://{domain}evil.com",
      "https://evil{domain}",
      "https://subdomain.{domain}",
      "https://{domain}-evil.com"
    ]
  },
  "regex_bypasses": {
    "description": "Regex validation bypass patterns",
    "patterns": [
      "https://{domain}.attacker.com",
      "https://attacker.com.{domain}",
      "https://{domain}%60.evil.com",
      "https://{domain}%0d.evil.com",
      "https://{domain}%0a.evil.com",
      "https://{domain}_.evil.com",
      "https://not{domain}",
      "https://{domain}@evil.com"
    ]
  },
  "protocol_downgrade": {
    "description": "HTTP protocol downgrade tests",
    "patterns": [
      "http://{domain}",
      "http://www.{domain}"
    ]
  },
  "special_origins": {
    "description": "Special case origin tests",
    "origins": [
      "https://localhost",
      "https://127.0.0.1",
      "file://",
      "chrome-extension://example",
      "moz-extension://example"
    ]
  },
  "cors_headers": {
    "request_headers": {
      "Origin": "Origin of the request",
      "Access-Control-Request-Method": "Preflight: requested method",
      "Access-Control-Request-Headers": "Preflight: requested headers"
    },
    "response_headers": {
      "Access-Control-Allow-Origin": "Allowed origins (* or specific)",
      "Access-Control-Allow-Credentials": "Allow cookies/auth",
      "Access-Control-Allow-Methods": "Allowed HTTP methods",
      "Access-Control-Allow-Headers": "Allowed request headers",
      "Access-Control-Expose-Headers": "Headers accessible to JS",
      "Access-Control-Max-Age": "Preflight cache duration"
    }
  },
  "vulnerability_patterns": {
    "critical": {
      "wildcard_with_credentials": {
        "acao": "*",
        "acac": "true",
        "description": "Wildcard allows any origin with credentials"
      },
      "reflection_with_credentials": {
        "acao": "{reflected_origin}",
        "acac": "true",
        "description": "Origin reflected with credentials enabled"
      }
    },
    "high": {
      "origin_reflection": {
        "acao": "{reflected_origin}",
        "description": "Arbitrary origin reflection"
      },
      "null_accepted": {
        "acao": "null",
        "description": "Null origin accepted"
      }
    },
    "medium": {
      "insecure_origin": {
        "acao": "http://{domain}",
        "description": "HTTP origin allowed for HTTPS site"
      }
    }
  },
  "preflight_testing": {
    "description": "OPTIONS preflight request testing",
    "dangerous_methods": ["PUT", "DELETE", "PATCH"],
    "custom_headers": ["X-Custom-Header", "X-Requested-With"],
    "content_types": ["application/json", "application/xml"]
  },
  "exploitation_scenarios": {
    "description": "Attack scenarios for bug bounty reports",
    "data_theft": {
      "description": "Cross-origin data theft via malicious website",
      "requirements": ["Origin reflection", "Credentials allowed"],
      "impact": "Steal user data, session info, API responses"
    },
    "csrf_bypass": {
      "description": "CSRF protection bypass via CORS",
      "requirements": ["Origin reflection"],
      "impact": "Perform state-changing actions cross-origin"
    },
    "internal_network": {
      "description": "Internal network scanning via browser",
      "requirements": ["Loose CORS policy"],
      "impact": "Probe internal services through victim browser"
    }
  }
}
